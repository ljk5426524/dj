.page{min-height:100vh;background-color:#f9fafc}.page .bg-top{position:relative;height:480rpx;background-color:#ff0000}.page .bg-top .head-bg{position:absolute;inset:0;width:100%;height:100%}.page .bg-top .icon-back{position:absolute;left:20rpx;width:50rpx;height:50rpx;color:#fff;z-index:1}.page .bg-top .logo{top:40rpx;position:absolute;left:50%;transform:translateX(-50%);color:#fff}.page .menu-items{position:relative;margin:-300rpx 0 0;border-radius:32rpx 32rpx 0 0;background-color:#fff;padding:32rpx}.page .menu-items .title-content{width:100%;display:flex;justify-content:space-between;align-items:baseline;margin-bottom:16rpx}.page .menu-items .title-content .title{color:#000;font-size:36rpx;font-weight:bold}.page .menu-items .title-content .select-item{position:relative;font-size:28rpx;display:flex;justify-content:center;align-items:flex-end;gap:12rpx}.page .menu-items .title-content .arrow{border:12rpx solid transparent;border-top-color:#000}.page .menu-items .scroll-content{height:calc(100vh - 770rpx)}